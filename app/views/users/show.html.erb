<div class="row">

  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <p><%= @user.name %></p>
        <p><%= @user.area %></p>
      </h1>
    </section>　

    <p>
      <%= link_to 'フォローユーザー', followings_user_path, class: "btn btn-lg btn-success btn-sm" %>
    </p>
    <p>
      <%= link_to 'フォロワーユーザー', followers_user_path, class: "btn btn-lg btn-success btn-sm" %>
    </p>
  </aside>

  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>

</div>